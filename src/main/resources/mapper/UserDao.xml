<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.demo.dao.UserDao">

    <sql id="columns">
        id, user_name, account, password, user_type, user_status, create_time, update_time
    </sql>

    <sql id="userQoCondition">
    <where>
        <if test="account != null and account !=''">
            and account = #{account}
        </if>
        <if test="userName != null and userName !=''">
            and user_name = #{userName}
        </if>
        <if test="userType != null">
            and user_type = #{userType}
        </if>
        <if test="userStatus != null">
            and user_status = #{userStatus}
        </if>
    </where>

    </sql>
    <insert id="insert" parameterType="com.example.demo.entity.User" useGeneratedKeys="true" keyProperty="id">
        insert into user
                (user_name, account, password, user_type, user_status)
            values
                (#{userName}, #{account}, #{password}, #{userType}, #{userStatus})
    </insert>

    <update id="update" parameterType="com.example.demo.entity.User">
        update user
        <set>
            <if test="userName != null and userName !=''">
                user_name = #{userName},
            </if>
            <if test="password != null and password !=''">
                password = #{password},
            </if>
            <if test="userType != null">
                user_type = #{userType},
            </if>
            <if test="userStatus != null">
                user_status = #{userStatus},
            </if>
        </set>
        where id = #{id}
    </update>

    <select id="listPage" resultType="com.example.demo.entity.User">
        select
        <include refid="columns"/>
        from user
        <include refid="userQoCondition"/>
    </select>

    <select id="getById" resultType="com.example.demo.entity.User">
        select
        <include refid="columns"/>
        from user
        where id = #{id}
    </select>

</mapper>
